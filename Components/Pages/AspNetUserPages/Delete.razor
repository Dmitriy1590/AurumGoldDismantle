@page "/aspnetusers/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorGoldenZebra.Models
@inject IDbContextFactory<BlazorGoldenZebra.Models.GoldenZebraSecurityContext> DbFactory
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "admin")]
<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>AspNetUser</h2>
    <hr />
    @if (aspnetuser is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserName</dt>
            <dd class="col-sm-10">@aspnetuser.UserName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">NormalizedUserName</dt>
            <dd class="col-sm-10">@aspnetuser.NormalizedUserName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@aspnetuser.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">NormalizedEmail</dt>
            <dd class="col-sm-10">@aspnetuser.NormalizedEmail</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EmailConfirmed</dt>
            <dd class="col-sm-10">@aspnetuser.EmailConfirmed</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PasswordHash</dt>
            <dd class="col-sm-10">@aspnetuser.PasswordHash</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SecurityStamp</dt>
            <dd class="col-sm-10">@aspnetuser.SecurityStamp</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ConcurrencyStamp</dt>
            <dd class="col-sm-10">@aspnetuser.ConcurrencyStamp</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PhoneNumber</dt>
            <dd class="col-sm-10">@aspnetuser.PhoneNumber</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PhoneNumberConfirmed</dt>
            <dd class="col-sm-10">@aspnetuser.PhoneNumberConfirmed</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">TwoFactorEnabled</dt>
            <dd class="col-sm-10">@aspnetuser.TwoFactorEnabled</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LockoutEnd</dt>
            <dd class="col-sm-10">@aspnetuser.LockoutEnd</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LockoutEnabled</dt>
            <dd class="col-sm-10">@aspnetuser.LockoutEnabled</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">AccessFailedCount</dt>
            <dd class="col-sm-10">@aspnetuser.AccessFailedCount</dd>
        </dl>
        <EditForm method="post" Model="aspnetuser" OnValidSubmit="DeleteAspNetUser" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(aspnetuser is null)">Delete</button> |
            <a href="/aspnetusers">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private AspNetUser? aspnetuser;

    [SupplyParameterFromQuery]
    private string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        aspnetuser = await context.AspNetUsers.FirstOrDefaultAsync(m => m.Id == Id);

        if (aspnetuser is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteAspNetUser()
    {
        using var context = DbFactory.CreateDbContext();
        context.AspNetUsers.Remove(aspnetuser!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/aspnetusers");
    }
}
