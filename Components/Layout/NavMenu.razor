@code {
    private string? currentUrl;
    private const string leftArrow = "bi-chevron-double-left";
    private const string rightArrow = "bi-chevron-double-right";
    private string myImageClass = leftArrow;

    [Parameter]
    public EventCallback<bool> OnMenuHide { get; set; }

    private string logoClass = "";

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    private void MenuSwitchClicked()
    {

        var needToHide = myImageClass == leftArrow;
        myImageClass = needToHide ? rightArrow : leftArrow;
        HIdeShowMenu(needToHide);

        const string logoHide = "logo-hide";

        logoClass = needToHide ? logoHide : "";
    }

    public string SizeClass;

    private void HIdeShowMenu(bool needToHide)
    {
        const string closeClass = "closed-menu";
        SizeClass = SizeClass == closeClass ? "" : closeClass;
    }
}

